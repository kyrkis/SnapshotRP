        {
          "when": "gui",
          "model": {
            "type": "minecraft:model",
            "model": "cool_items:item/meteor_tome"
          }
        }
      ],
      "fallback": {
        "type": "minecraft:model",
        "model": "cool_items:item/meteor_tome_model_closed"
      }
