    "on_true": {
      "type": "minecraft:select",
      "property": "minecraft:display_context",
      "cases": [
        {
          "when": "gui",
          "model": {
            "type": "minecraft:model",
            "model": "cool_items:item/meteor_tome"
          }
        }
      ],
      "fallback": {
        "type": "minecraft:model",
        "model": "cool_items:item/meteor_tome_model"
      }
